<%= form_with model: task, class: 'form-group mb-3' do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <%# On montre cette partie uniquement si on n'est PAS sur une création de tâche %>
  <% unless task.new_record? %>
    <%= f.label :completed %>
    <%= f.check_box :completed, class: "form-check" %>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
